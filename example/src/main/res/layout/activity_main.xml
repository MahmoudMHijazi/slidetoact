<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B1C21">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:orientation="vertical">

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <!--<com.ncorti.slidetoact.SlideToActView
            android:id="@+id/welcome_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="6dp"
            app:text="Sample SlideToActView" />-->

        <com.ncorti.slidetoact.SlideToActView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/welcome_slider"
            app:text_appearance="@style/SwiperTextStyle"
            app:text="Swipe To Confirm"
            app:slider_icon="@drawable/ic_slider_icon"
            app:slider_icon_color="#FFFFFF"
            app:inner_color="#EE157A"
            app:outer_color="#26EE157A"
            app:area_margin="0dp"
            app:icon_margin="10dp"
            app:border_radius="25dp"
            app:rotate_icon="false"
            app:slider_locked="false"
            app:complete_icon="@drawable/ic_small_check"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:text="@string/welcome_body" />

        <Button
            android:id="@+id/button_area_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/area_margin" />

        <Button
            android:id="@+id/button_icon_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/icon_margin" />

        <Button
            android:id="@+id/button_colors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/colors" />

        <Button
            android:id="@+id/button_border_radius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/border_radius" />

        <Button
            android:id="@+id/button_elevation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/elevation" />

        <Button
            android:id="@+id/button_text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_size" />

        <Button
            android:id="@+id/button_slider_dimension"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/slider_dimension" />

        <Button
            android:id="@+id/button_event_callbacks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/event_callback" />

        <Button
            android:id="@+id/button_locked_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/locked_slider" />

        <Button
            android:id="@+id/button_custom_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/custom_icon" />

        <Button
            android:id="@+id/button_reversed_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reversed_slider" />

        <Button
            android:id="@+id/button_animation_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/animation_duration" />

        <Button
            android:id="@+id/button_bump_vibration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bump_vibration" />

        <Button
            android:id="@+id/button_completed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/completed" />

    </LinearLayout>
</ScrollView>
